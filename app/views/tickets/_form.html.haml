= form_for @ticket, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :ticket_type, :class => 'control-label'
    .controls
      = f.text_field :ticket_type, :class => 'text_field'
  .control-group
    = f.label :due_at, :class => 'control-label'
    .controls
      = f.datetime_select :due_at, :class => 'datetime_select'
  .control-group
    = f.label :complexity, :class => 'control-label'
    .controls
      = f.number_field :complexity, :class => 'number_field'
  .control-group
    = f.label :requestor_id, :class => 'control-label'
    .controls
      = f.number_field :requestor_id, :class => 'number_field'
  .control-group
    = f.label :owner_id, :class => 'control-label'
    .controls
      = f.number_field :owner_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tickets_path, :class => 'btn'
